<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordLearning">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/wordTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textSize="25sp"
                android:text="@string/word_Main"
                android:textColor="@color/white"
                android:background="@color/Orange"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="100dp" />

            <Button
                android:id="@+id/Home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                app:icon="@android:drawable/stat_notify_more"
                app:iconSize="40dp"
                app:iconTint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wordADMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kanjiView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="TextView"
                android:gravity="center"
                android:textSize="25sp"
                android:background="@drawable/stroke"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="126dp" />

            <TextView
                android:id="@+id/hiraganaView"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="TextView"
                android:gravity="center"
                android:textSize="20sp"

                android:background="@drawable/stroke"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="256dp" />

            <TextView
                android:id="@+id/wordMeaning"
                android:layout_width="310dp"
                android:layout_height="30dp"
                android:text="TextView"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/stroke"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="256dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:max="30"
                android:progress="0"
                android:paddingTop="20dp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="297dp" />

            <TextView
                android:id="@+id/wordCount"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="TextView"
                android:gravity="center"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="256dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical" >

            <com.google.android.gms.ads.AdView
                android:id="@+id/ad_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-3940256099942544/6300978111"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>